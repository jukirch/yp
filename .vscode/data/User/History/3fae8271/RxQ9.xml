                                title="{= ${oscarWon} ? 'Gewann den Oscar!' : 'Hat den Oscar nicht gewonnen.' }"
                                icon="{= ${/oscar/0/oscarWon} === true ? 'sap-icon://study-leave' : 'sap-icon://decline' }" 
