                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer
                                title="Oscars - Film"
                                id="cont1"
                            >
                                <f:layoutData>
                                    <f:ColumnContainerData
                                        columnsXL="2"
                                        columnsL="2"
                                        columnsM="1"
                                    />
                                </f:layoutData>
                                <f:formElements>
                                    <f:FormElement id="elem2">
                                        <f:label>
                                            <Label
                                                text="Bester Film"
                                                id="lbl2"
                                            />
                                        </f:label>
                                        <f:fields>
                                            <Input
                                                value="{/oscar/0/movName}"
                                                width="200px"
                                                id="inp2"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer
                                title="Oscars - Personen"
                                id="cont1"
                            >
                                <f:layoutData>
                                    <f:ColumnContainerData
                                        columnsXL="2"
                                        columnsL="2"
                                        columnsM="1"
                                    />
                                </f:layoutData>
                                <f:formElements>
                                    <f:FormElement id="el3">
                                        <f:label>
                                            <Label
                                                text="Bester mÃ¤nnlicher Schauspieler"
                                                id="lbl3"
                                            />
                                        </f:label>
                                        <f:fields>
                                            <Input
                                                value="{/oscar/0/movMaleLead}"
                                                width="200px"
                                                id="inp3"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="el4">
                                        <f:label>
                                            <Label
                                                text="Beste weibliche Schauspielerin"
                                                id="lbl4"
                                            />
                                        </f:label>
                                        <f:fields>
                                            <Input
                                                value="{/oscar/0/movFemaleLead}"
                                                width="200px"
                                                id="inp4"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="el5">
                                        <f:label>
                                            <Label
                                                text="Beste Regie"
                                                id="lbl5"
                                            />
                                        </f:label>
                                        <f:fields>
                                            <Input
                                                value="{/oscar/0/movDirector}"
                                                width="200px"
                                                id="inp5"
                                            />
                                        </f:fields>
                                   </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
