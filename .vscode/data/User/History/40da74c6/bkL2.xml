    displayBlock="true"
>
    <App>
        <pages>
            <Page
                id="page"
                title="{i18n>title}"
            >
                <content>
                    <f:Form
                        editable="true"
                        id="form0"
                    >
                        <f:layout>
                            <f:ColumnLayout
