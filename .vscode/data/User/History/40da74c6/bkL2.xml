                                        columnsL="1"
                                        columnsM="1"
                                    />
                                </f:layoutData>
                                <f:formElements>
                                    <f:FormElement id="el1">
                                        <f:label>
                                            <Label
                                                text="Jahr der Verleihung"
                                                id="lbl1"
                                            />
                                        </f:label>
                                        <f:fields>
                                            <Input
                                                value="{/oscar/0/movYear}"
