<mvc:View
    controllerName="unit15.controller.Main"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m"
>

    <App>
        <pages>
            <Page title="{i18n>title}">
                <content>
                    <Button
                        text="Zeige nur ab Jahr: "
                        id="button0"
                        press="onFilter"
                        width="200px"
                    />

                    <Input
                        placeholder="JJJJ"
                        width="120px"
                        id="input0"
                    />

                    <Button
                        text="Nach Film sortieren"
                        id="button5"
                        press="onFilmSort"
                        width="200px"
                    />

                    <Button
                        text="Nach Regie sortieren"
                        id="button4"
                        press="onRSort"
                        width="200px"
                    />

                    <Button
                        text="Nach Preisträgern sortieren"
                        id="button2"
                        press="onMSort"
                        width="200px"
                    />

                    <Button
                        text="Nach Preisträgerinnenn sortieren"
                        id="button3"
                        press="onFSort"
                        width="200px"
                    />

                    <Button
                        text="Alle Filter zurücksetzen"
                        id="button1"
                        press="onReset"
                        icon="sap-icon://decline"
                        width="150px"
                    />

                    <t:Table
                        selectionBehavior="RowOnly"
                        width="1150px"
                        id="table0"
                        rows="{     
                                    path: '/oscar',
                                    filters: [ { } ],
                                    sorter: [ { path: 'oscYear', descending: true } ]
                        }"
                    >
                        <t:columns>
                            <t:Column
                                id="Column0"
                                width="100px"
                            >
                                <t:label>
                                    <Label
                                        text="Jahr"
                                    />
                                </t:label>
                                <t:template>
                                    <Text text="{oscYear}"/>
                                </t:template>
                                    
                            </t:Column>

                            <t:Column
                                id="column1"
                            >
                                <t:label>
                                    <Label
                                        text="Datum"
                                    />
                                </t:label>
                                <t:template>
                                    <Text text="{oscDate}"/>
                                </t:template>
                            </t:Column>

                            <t:Column
                                id="column5">
                                <t:label>
                                    <Label
                                        text="Bester Film"
                                    />
                                </t:label>
                                <t:template>
                                    <Text text="{oscBestFilm}"/>
                                </t:template>
                            </t:Column>

                            <t:Column
                                id="column2"
                                width="200px"
                            >
                                <t:label>
                                    <Label
                                        text="Regisseur"
                                    />
                                </t:label>
                                <t:template>
                                    <Text text="{oscBestDir}"/>
                                </t:template>
                            </t:Column>

                            <t:Column
                                id="column3"
                                width="200px"
                            >
                                <t:label>
                                    <Label
                                        text="Bester Schauspieler"
                                    />
                                </t:label>
                                <t:template>
                                    <Text text="{oscMaleLead}"/>
                                </t:template>
                            </t:Column>

                            <t:Column
                                id="column4"
                                width="200px"
                            >
                                <t:label>
                                    <Label
                                        text="Beste Schauspielerin"
                                        id="label4"
                                    />
                                </t:label>
                                <t:template>
                                    <Text text="{oscFemaleLead}"/>
                                </t:template>
                            </t:Column>
                        </t:columns>
                    </t:Table>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
