<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">

    <template:if test="{= ${parameter>/settings/quickVariantSelectionX}}">
        <template:then>
			<template:repeat list="{tabItem>chartSettings/extensionActions}" var="customAction">
				<!--all break out actions which are neither determining nor global-->
				<template:if test="{= !${customAction>determining} &amp;&amp; !${customAction>global}}">
					<Button id="{customAction>id}"
						enabled="{customAction>enabled}"
						text="{customAction>text}"
						press="{customAction>press}"
						type="Transparent">
						<layoutData>
							<OverflowToolbarLayoutData priority = "{customAction>importance}"/>
						</layoutData>
					</Button>
  	          	</template:if>
			</template:repeat>
		</template:then>
        <template:else>
			<template:repeat list="{parameter>/templateSpecific/chartSettings/extensionActions}" var="customAction">
				<!--all break out actions which are neither determining nor global-->
				<template:if test="{= !(${customAction>determining} || ${customAction>global})}">
					<Button id="{customAction>id}"
						enabled="{customAction>enabled}"
						text="{customAction>text}"
						press="{customAction>press}"
						type="Transparent">
						<layoutData>
							<OverflowToolbarLayoutData priority = "{customAction>importance}"/>
						</layoutData>
					</Button>
				</template:if>
			</template:repeat>
		</template:else>
	</template:if>
</core:FragmentDefinition>